<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"

    xmlns:android="http://schemas.android.com/apk/res/android">




    <ImageView
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/platform"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:id="@+id/platform_iv"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ball"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/ball_iv"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_alignParentLeft="true"
        android:id="@+id/left_border_tv"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_alignParentRight="true"
        android:id="@+id/right_border_tv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:id="@+id/top_border_tv"/>

    <syntax.org.il.gameproject.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




 <!--   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X:"
        android:id="@+id/X_change"/>-->

</RelativeLayout>



